<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= params[:list_id] %>/delete" method="post" class="delete">
          <button type="submit" class="delete">Delete list</button>
        </form>
      </li>
    </ul>
  </header>
</section>
<form action="/lists/<%= params[:list_id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter your new list name :</label>
    </dt>
    <dd>
      <input type="text" name="list_name" id="list_name" value=" <%= params[:list_name] || @list[:name] %>"/>
    </dd>
  </dl>
  <fieldset>
    <input type="submit" value="Save"/>
    <a href="/lists/<%= params[:list_id] %>">Cancel</a>
  </fieldset>
</form>
